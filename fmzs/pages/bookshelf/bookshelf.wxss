.nav {
  display: flex;
  flex-direction: row;
  text-align: center;
}

.nav-item {
  width: 25%;
  margin-top: 15px;
  font-size: 12px;
}

.head {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}

.head-title {
  font-size: 16px;
  margin-left: 15px;
  font-weight: bolder;
  color: #000;
}

.head-right {
  position: absolute;
  right: 13px;
  font-size: 15px;
  color: #1296db;
}

.hr {
  height: 15px;
  background-color: #ccc;
  margin-top: 10px;
  opacity: 0.2;
}

.hr2 {
  height: 2px;
  background-color: #ccc;
  opacity: 0.2;
}

.item {
  display: flex;
  flex-direction: row;
  margin-left: 10px;
  margin-bottom: 5px;
}

.desc {
  margin-left: 20px;
  line-height: 30px;
  font-size: 12px;
}

.title {
  font-weight: bold;
}

.count {
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999;
}

.liulan{
  position: absolute;
  right: 70px;
}