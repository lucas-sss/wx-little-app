.search {
  display: flex;
  flex-direction: row;
  margin-top: 5px;
}

.search-input {
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
  margin-left: 20px;
  border: 1px solid #aaa;
  border-radius: 3px;
  background-color: #f0f0f4;
}
.search-cancel-view{
  position: absolute;
  height: 30px;
  width: 25px;
}
.search-btn-view {
  position: absolute;
  right: 0px;
  height: 32px;
  width: 48px;
}
.search-btn {
  position: absolute;
  right: 15px;
  font-size: 20px;
}

.hr {
  height: 1px;
  background-color: #808080;
  margin-top: 5px;
  opacity: 0.2;
}

.hotSearch {
  display: flex;
  flex-direction: column;
}
.hotSearch-label {
  margin-top: 10px;
  font-size: 20px;
  color: #aaa;
}
.hotSearch-item {
  display: flex;
  flex-direction: row;
  margin-left: 30%; 
  margin-top: 10px;
}

.center{
  text-align: center;
}
.red-font{
  color: red;
}