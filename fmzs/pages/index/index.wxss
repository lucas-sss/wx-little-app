.nav {
  display: flex;
  flex-direction: row;
  text-align: center;
}

.nav-item {
  width: 25%;
  margin-top: 10px;
  font-size: 12px;
}

.head {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}

.head-title {
  font-size: 16px;
  margin-left: 15px;
  font-weight: bolder;
  color: #000;
}

.head-right {
  position: absolute;
  right: 13px;
  font-size: 13px;
  color: #1296db;
}

.hr {
  height: 10px;
  background-color: #ccc;
  margin-top: 5px;
  opacity: 0.2;
}

.hr2 {
  height: 2px;
  background-color: #ccc;
  opacity: 0.2;
}

.item {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  margin-left: 10px;
  margin-bottom: 5px;
}

.overview {
  display: flex;
  flex-direction: column;
  margin-left: 15px;
  font-size: 12px;
}

.title {
  font-weight: bold;
  font-size: 13px;
}

.desc {
  text-indent: 40rpx;
  text-align: left;
  color: #aaa;
  font-size: 10px;
  height: 35px;
  margin-bottom: 10px;
  margin-right: 10px;
}
/*  */
.mark {
  display: flex;
  flex-direction: row;
  margin-bottom: 0px;
  font-size: 10px;
}
.mark-author {
  font-size: 12px;
}
.mark-finished {
  position: absolute;
  right: 60px;
  border: 1px solid #f51;
  text-align: center;
  border-radius: 3px;
  color: #f51;
}

.mark-unfinished {
  position: absolute;
  right: 60px;
  border: 1px solid #008800;
  text-align: center;
  border-radius: 3px;
  border-spacing: 3px;
  color: #008800;
}

.mark-catogry {
  position: absolute;
  right: 13px;
  border: 1px solid #aaa;
  text-align: center;
  border-radius: 3px;
  color: #aaa;
}

.count {
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999;
}

.liulan {
  position: absolute;
  right: 70px;
}
